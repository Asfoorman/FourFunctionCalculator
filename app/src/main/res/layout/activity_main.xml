<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/twoBttn2"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="2"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/button16"
        tools:layout_editor_absoluteX="109dp" />

    <Button
        android:id="@+id/addBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="+"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/subBttn"
        tools:layout_editor_absoluteX="268dp" />

    <Button
        android:id="@+id/subBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/multiBttn"
        tools:layout_editor_absoluteX="268dp" />

    <TextView
        android:id="@+id/lblProblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Problem Here"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/lblFinalAnswer"
        android:layout_width="361dp"
        android:layout_height="85dp"
        android:text="Answer Will Appear Here"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="410dp" />

    <Button
        android:id="@+id/zeroBttn"
        android:layout_width="130"
        android:layout_height="55"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/lblFinalAnswer"
        app:layout_constraintTop_toBottomOf="@+id/oneBttn"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/oneBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/fourBttn"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/dotBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="."
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lblFinalAnswer"
        app:layout_constraintTop_toBottomOf="@+id/threeBttn"
        tools:layout_editor_absoluteX="184dp" />

    <Button
        android:id="@+id/equalBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="="
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lblFinalAnswer"
        app:layout_constraintTop_toBottomOf="@+id/addBttn"
        tools:layout_editor_absoluteX="268dp" />

    <Button
        android:id="@+id/threeBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="3"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/sixBttn"
        tools:layout_editor_absoluteX="184dp" />

    <Button
        android:id="@+id/multiBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="*"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/divBttn"
        tools:layout_editor_absoluteX="268dp" />

    <Button
        android:id="@+id/divBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="/"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/lblProblem"
        tools:layout_editor_absoluteX="268dp" />

    <Button
        android:id="@+id/fourBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="4"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/sevenBttn"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/button16"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/eightBttn"
        tools:layout_editor_absoluteX="109dp" />

    <Button
        android:id="@+id/sixBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="6"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/nineBttn"
        tools:layout_editor_absoluteX="184dp" />

    <Button
        android:id="@+id/sevenBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="7"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/acBttn"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/eightBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="8"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/posNegBttn"
        tools:layout_editor_absoluteX="109dp" />

    <Button
        android:id="@+id/nineBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/percentBttn"
        tools:layout_editor_absoluteX="184dp" />

    <Button
        android:id="@+id/acBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="AC"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/lblProblem"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/posNegBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="+/-"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/lblProblem"
        tools:layout_editor_absoluteX="109dp" />

    <Button
        android:id="@+id/percentBttn"
        android:layout_width="55"
        android:layout_height="55"
        android:layout_marginTop="8dp"
        android:text="%"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/lblProblem"
        tools:layout_editor_absoluteX="184dp" />

</android.support.constraint.ConstraintLayout>